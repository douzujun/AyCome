<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:background="#668b8b8b" >

                    <TextView
                        android:id="@+id/home_image_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:singleLine="true"
                        android:text="天王盖地虎,宝塔镇河妖" />

                    <LinearLayout
                        android:id="@+id/home_point_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        ></LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:padding="@dimen/height_top_bar"
                android:background="#fdfdfd">
                <LinearLayout
                    android:id="@+id/icon1"
                    android:orientation="vertical"
                    android:layout_width="95dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_clean_daily"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/ic_clean_daily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="日常保洁"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/icon2"
                    android:orientation="vertical"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/icon1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_maintain_painter"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/ic_maintain_painter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="大扫除"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/icon3"
                    android:orientation="vertical"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/icon2">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_homely_sofa"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/ic_homely_sofa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="真皮沙发保养"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/icon4"
                    android:orientation="vertical"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/icon3">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_homely_floor"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/ic_homely_floor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="地板打蜡"/>

                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e4dcdc"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
