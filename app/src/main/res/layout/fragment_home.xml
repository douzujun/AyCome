<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--顶部轮播图片布局-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:background="#668b8b8b" >

                    <TextView
                        android:id="@+id/home_image_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:singleLine="true"
                        android:text="天王盖地虎,宝塔镇河妖" />

                    <LinearLayout
                        android:id="@+id/home_point_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        ></LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!--中部按钮布局-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:padding="@dimen/height_top_bar"
                android:background="#fdfdfd">
                <LinearLayout
                    android:id="@+id/icon1"
                    android:orientation="vertical"
                    android:layout_width="95dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_clean_daily"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/ic_clean_daily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="日常保洁"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/icon2"
                    android:orientation="vertical"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/icon1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_maintain_painter"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/ic_maintain_painter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="大扫除"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/icon3"
                    android:orientation="vertical"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/icon2">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_homely_sofa"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/ic_homely_sofa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="真皮沙发保养"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/icon4"
                    android:orientation="vertical"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/icon3">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_homely_floor"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/ic_homely_floor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="地板打蜡"/>

                </LinearLayout>
            </RelativeLayout>
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e4dcdc"/>
            <!--中部图文布局-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <LinearLayout
                    android:id="@+id/show_text_1"
                    android:orientation="horizontal"
                    android:layout_width="200dp"
                    android:paddingLeft="10dp"
                    android:layout_height="75dp">

                    <ImageView
                        android:id="@+id/home_short_image1"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/home_short_image2"/>
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="75dp"
                        android:textSize="10sp"
                        android:textColor="#2e2d2d"
                        android:gravity="center_horizontal|center_vertical"
                        android:singleLine="false"
                        android:text="打开手机扫一扫,有惊喜"/>
                </LinearLayout>
                <View
                    android:id="@+id/view_temp_1"
                    android:layout_width="0.2dp"
                    android:layout_height="150dp"
                    android:layout_toRightOf="@id/show_text_1"
                    android:background="#d6d6d6"
                    />

                <LinearLayout
                    android:id="@+id/show_text_2"
                    android:orientation="horizontal"
                    android:layout_width="200dp"
                    android:layout_height="75dp"
                    android:paddingLeft="10dp"
                    android:layout_toRightOf="@id/show_text_1">

                    <ImageView
                        android:id="@+id/home_short_image2"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/home_short_image3"/>
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="75dp"
                        android:textSize="10sp"
                        android:textColor="#2e2d2d"
                        android:gravity="center_horizontal|center_vertical"
                        android:singleLine="false"
                        android:text="    生活尽在这里"/>
                </LinearLayout>
                <View
                    android:id="@+id/view_temp_2"
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_below="@id/show_text_1"
                    android:background="#d6d6d6"
                    />

                <LinearLayout
                    android:id="@+id/show_text_3"
                    android:orientation="horizontal"
                    android:layout_width="200dp"
                    android:layout_height="75dp"
                    android:paddingLeft="15dp"
                    android:layout_below="@+id/show_text_1">

                    <ImageView
                        android:id="@+id/home_short_image3"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/home_short_image4"/>
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="75dp"
                        android:textSize="10sp"
                        android:textColor="#2e2d2d"
                        android:gravity="center_horizontal|center_vertical"
                        android:singleLine="false"
                        android:text="      孩子成长中的烦恼"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/show_text_4"
                    android:orientation="horizontal"
                    android:layout_width="200dp"
                    android:layout_height="75dp"
                    android:paddingLeft="15dp"
                    android:layout_toRightOf="@+id/show_text_3"
                    android:layout_below="@+id/show_text_2">

                    <ImageView
                        android:id="@+id/home_short_image4"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/home_short_image6"/>
                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="75dp"
                        android:textSize="10sp"
                        android:textColor="#2e2d2d"
                        android:gravity="center_horizontal|center_vertical"
                        android:singleLine="false"
                        android:text=" 萌宠大作战"/>
                </LinearLayout>
            </RelativeLayout>
            <!--分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#e4dcdc"/>
            <!--底部卡片布局-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
